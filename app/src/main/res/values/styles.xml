<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:textViewStyle">@style/TextStyle</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextStyle">
        <item name="fontFamily">@font/tillana</item>
    </style>

    <style name="TextViewTituloCreditos" parent="TextStyle">
        <item name="android:textColor">#FDD835</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewSubTituloCreditos" parent="TextStyle">
        <item name="android:textColor">#FDD835</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoLink">web</item>
        <item name="android:textColorLink">@color/colorUI3PrincetonOrange</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >

    </style>

    <style name="NavigationDrawerStyle" parent="Widget.Design.NavigationView">
        <item name="fontFamily">@font/tillana</item>
        <item name="android:textStyle">bold</item>
        <item name="listPreferredItemPaddingLeft">0dp</item>
        <item name="listPreferredItemPaddingRight">0dp</item>
    </style>

    <style name="TextViewParrafos" parent="TextStyle">
        <item name="android:textColor">@color/colorUILightCoral</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="TextViewDrawerItem" parent="TextStyle">
        <item name="android:textColor">@drawable/drawable_highlight_text</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:shadowColor">@color/colorUI4VerdeOscuro</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
</resources>