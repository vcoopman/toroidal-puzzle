                android:shadowDx="5.0"
                android:shadowDy="0.0"
                android:shadowRadius="1.0"
                android:text="00000"
                android:textColor="@color/colorUILightCoral"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>

