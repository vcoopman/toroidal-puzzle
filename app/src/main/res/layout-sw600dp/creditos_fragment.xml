<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorUI3MyrtleGreenDark"
    tools:context="com.curso.toroidal_puzzle.ui.help.CreditosFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            style="@style/TextViewTitulo.Tablet"
            android:text="CRÃ‰DITOS"
            app:layout_constraintBottom_toTopOf="@+id/guidelinehori"
            app:layout_constraintEnd_toStartOf="@+id/guidelinevert"
            app:layout_constraintStart_toStartOf="@+id/guidelinevert"
            app:layout_constraintTop_toTopOf="@+id/guidelinehori" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/credito_leo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.788"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5">

            <androidx.cardview.widget.CardView
                style="@style/CardViewCreditos.Tablet"
                app:cardCornerRadius="130dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/foto_leo"
                    style="@style/FotoCreditos"
                    android:src="@drawable/leo"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewNombreCreditos.Tablet"
                    android:text="Leo Aravena" />

                <TextView
                    style="@style/TextViewEnlaceGitHub.Tablet"
                    android:text="github.com/ldaravena" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/credito_vicente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/credito_felipe"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/credito_felipe"
            app:layout_constraintTop_toBottomOf="@+id/credito_felipe">

            <androidx.cardview.widget.CardView
                style="@style/CardViewCreditos.Tablet"
                app:cardCornerRadius="90dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/foto_vicente"
                    style="@style/FotoCreditos"
                    android:src="@drawable/vicente"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewNombreCreditos.Tablet"
                    android:text="Vicente Coopmann" />

                <TextView
                    style="@style/TextViewEnlaceGitHub.Tablet"
                    android:text="github.com/vcoopman" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/credito_felipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/credito_leo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/credito_leo"
            app:layout_constraintTop_toBottomOf="@+id/credito_leo">

            <androidx.cardview.widget.CardView
                style="@style/CardViewCreditos.Tablet"
                app:cardCornerRadius="90dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/foto_felipe"
                    style="@style/FotoCreditos"
                    android:src="@drawable/felipe"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewNombreCreditos.Tablet"
                    android:text="Felipe Cerda" />

                <TextView
                    style="@style/TextViewEnlaceGitHub.Tablet"
                    android:text="github.com/felipecer" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelinevert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelinehori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>